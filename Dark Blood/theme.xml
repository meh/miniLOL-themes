<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE theme [
    <!ELEMENT theme (initialize?, finalize?, styles?)>
    <!ATTLIST theme
        name   CDATA #REQUIRED
        author CDATA #REQUIRED
    >

    <!ELEMENT initialize (#PCDATA)>

    <!ELEMENT finalize (#PCDATA)>

    <!ELEMENT styles (style+)>
    
    <!ELEMENT style EMPTY>
    <!ATTLIST style
        name    CDATA   #REQUIRED
    >
]>

<theme name="Dark Blood" author="meh." description="One of the meh's homepage themes." homepage="http://meh.doesntexist.org" menu="head" content="body">
    <initialize><![CDATA[
        miniLOL.theme.data.resize = function () {
            $('body').setStyle({
                height: (document.viewport.getHeight()-(50+$('head').getHeight()+20)-(50+$('credits').getHeight()+20))+'px'
            });
        };

        Event.observe(window, "resize", miniLOL.theme.data.resize);
        Event.observe(document, ":module.load", miniLOL.theme.data.resize);

        Event.observe(document, ":initialized", function () {
            miniLOL.theme.data.resize.delay(0.1);
        });

        miniLOL.theme.data.resize.defer();
    ]]></initialize>

    <finalize><![CDATA[
        Event.stopObserving(window, "resize", miniLOL.theme.data.resize);
        Event.stopObserving(document, ":module.load", miniLOL.theme.data.resize);
    ]]></finalize>

    <templates>
        <menu>
            <layers>
                <_0>
                    <menu><![CDATA[
                        #{data}
                    ]]></menu>
        
                    <item><![CDATA[
                        <div class="menu"><a href="#{href}" #{attributes}>#{text}</a>#{data}</div>
                    ]]></item>
                </_0>
        
                <_1>
                    <menu><![CDATA[
                        <div class="menu">#{data}</div>
                    ]]></menu>
        
                    <item><![CDATA[
                        <a class="menu_element" href="#{href}" #{attributes}><div class="#{class}">#{text}</div></a>
                    ]]></item>
                </_1>
            </layers>
        
            <separator><![CDATA[
                <div class="separator"></div>
            ]]></separator>
        </menu>
    </templates>

    <styles>
        <style name="core"/>
        <style name="menu"/>

        <style name="Blog/style"/>
        <style name="Syntax Highlighter/style"/>
    </styles>
</theme>
